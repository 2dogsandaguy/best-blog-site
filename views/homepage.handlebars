<div>
{{#each blogPosts as |blogPost|}}

  <div class="row">

    <div class="container blogBox">
			<div class="row  justify-content-center headerRow">
      <div class="col-8">
        <h2>
          <a class="blogTitle text-uppercase" href="/blog/{{blogPost.id}}">{{blogPost.title}}</a>
        </h2>
      </div>

      <div class="col-4">
        <p class="blogCreate text-right">Created by
          {{blogPost.username}}
          on
          {{format_date blogPost.date_created}}
        </p>
      </div>
			</div>
    <div class="blogDesc">
      <p class="text-center blogDescMain">
        {{blogPost.description}}
      </p>
    </div>
    </div>

  </div>

{{/each}}
 {{#if logged_in}}

<form class="new-comment-form formCont d-flex flex-wrap justify-content-center" data-blog_Post_id={{blogPost.id}}>
    <div class="textAreaCont p-2">
        <!-- Textarea for entering a new comment -->
        <textarea id='comment_description' name="comment-body"
        placeholder="Enter a comment here..."
        cols="30"
        rows="2"></textarea>
    </div>
    <div class="btnComment p-2">
        <!-- Button for submitting a new comment -->
        <button class="button btn btn-success" type="submit">Add Comment</button>
    </div>
    
    <!-- Add a "Like" button here -->
    <div class="likeButton p-2">
        <button class="button btn btn-primary" id="like-button">Like</button>
        <p id="username-display" style="display: none;"></p>
    </div>
</form>

{{/if}}

<!-- Display the header for the comments section -->
<h2 class="text-center">Comments</h2>

<!-- Iterate through each comment and display its content and author information -->
{{#each blogPost.Comments as |comment|}}
<div class="commentCont">
    <p class="text-center commentText">{{comment.comment_description}}</p>
    <p class="text-center commentOwner">
        <span>~</span>Created by {{comment.username}} on {{format_date date_created}}<span>~</span>
    </p>
    
    <!-- Add a "Like" button for each comment -->
    <button class="like-button" data-comment-id="{{comment.id}}">Like</button>

</div>
{{/each}}
</div>